{
  "name": "theatre",
  "version": "2.0.0",
  "description": "Theatre app backend (Fastify + TypeScript + Drizzle + Zod)",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch ./src --ext ts --exec tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:test": "tsx src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage --dir tests/unit",
    "test:e2e": "PW_SKIP_BROWSER_DOWNLOAD=1 playwright test --reporter=list,html,json --output=playwright-report",
    "test:curl": "bash ./scripts/e2e_curl.sh",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext .ts",
    "drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "playwright": "playwright"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/session": "^10.7.1",
    "@testcontainers/postgresql": "^11.5.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "fastify-type-provider-zod": "^1.2.0",
    "pg": "^8.11.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitest/coverage-v8": "^2.0.5",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.1",
    "pg-mem": "^3.0.5",
    "testcontainers": "^10.10.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
