{
  "name": "theatre",
  "version": "2.0.0",
  "description": "Theatre app backend (Fastify + TypeScript + Drizzle + Zod)",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch ./src --ext ts --exec tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config ./drizzle.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^10.0.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^12.0.0",
    "@fastify/session": "^10.7.1",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "fastify-type-provider-zod": "^1.2.0",
    "pg": "^8.11.5",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.10",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "nodemon": "^3.0.1",
    "tsx": "^4.16.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
